<h1>홈페이지</h1>

<a href = '/home/new'>글쓰러가기</a>


<% @post.each do |post| %>
    <hr>
    <a href = '/home/show/<%= post.id%>'><%= post.title %></a><br>
    <a href='/home/delete/<%=post.id%>'><button type="button" class="btn btn-primary">삭제</button></a><br>
    <hr>
    
<% end %>


<p>검색</p>
<form action='/home/index'>
  <input type="text" name="search">
  <input type= 'submit'>
</form>

<% if @select.present? %>
    <% @select.each do |x| %>
    
        <%= x.title %>
        <%= x.content %>
    <% end %>
    
<% else%>
    <h1>검색한 결과가 없습니다.</h1>
<% end %>